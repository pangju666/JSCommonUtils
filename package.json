{
  "name": "pangju-utils",
  "private": false,
  "version": "3.0.0",
  "author": "pangju",
  "description": "常用js工具类，命名和实现参考Apache Java Common Utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pangju666/js-utils.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pangju666/js-utils/issues"
  },
  "homepage": "https://github.com/pangju666/js-utils#readme",
  "keywords": [
    "utils",
    "tools"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "rollup -c rollup.config.js",
    "doc": "typedoc --out doc --logLevel Verbose",
    "lint": "eslint **/*.{ts,js} --fix",
    "prettier": "prettier --write **/*.{ts,js}",
    "test": "jest --no-cache --config jest.config.js",
    "lint-staged": "lint-staged"
  },
  "type": "module",
  "types": "./dist/pangju-utils.d.ts",
  "exports": {
    "require": "./dist/pangju-utils.cjs",
    "default": "./dist/pangju-utils.esm.js"
  },
  "main": "./dist/pangju-utils.cjs",
  "module": "./dist/pangju-utils.esm.js",
  "unpkg": "./dist/pangju-utils.umd.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "core-js": "^3.25.0",
    "date-fns": "^2.29.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/plugin-external-helpers": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.0.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.0.0",
    "@types/jest": "^29.0.3",
    "eslint": "8.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.0.1",
    "typedoc": "^0.23.0",
    "typescript": "^4.8.2"
  }
}
