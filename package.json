{
  "name": "pangju-utils",
  "private": false,
  "version": "3.0.0",
  "author": "pangju",
  "description": "常用js工具类，命名和实现参考Apache Java Common Utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pangju666/js-utils.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pangju666/js-utils/issues"
  },
  "homepage": "https://github.com/pangju666/js-utils#readme",
  "keywords": [
    "utils",
    "tools"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "rollup -c rollup.config.mjs --no-tests",
    "doc": "typedoc --out doc --logLevel Verbose",
    "prettier": "prettier --write src/ test/",
    "eslint": "eslint . --fix",
    "test": "jest --config jest.config.js"
  },
  "type": "module",
  "main": "dist/pangju-utils.cjs",
  "module": "dist/pangju-utils.esm.js",
  "browser": "dist/pangju-utils.umd.js",
  "types": "dist/pangju-utils.d.ts",
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "rollup": "^4.34.4",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "pnpm run lint && pnpm run prettier"
    ]
  }
}
